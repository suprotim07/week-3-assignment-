class Node:
    def __init__(self, data):
        self.data = data
        self.next = None

def delete_node(head, key):
    if head is None:
        return None
    # If head needs to be deleted
    if head.data == key:
        return head.next

    current = head
    while current.next and current.next.data != key:
        current = current.next

    if current.next:
        current.next = current.next.next
    return head
